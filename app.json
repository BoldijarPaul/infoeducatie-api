    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "DB": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
